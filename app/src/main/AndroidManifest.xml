<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finance.plutus.mobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.PlutusApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plutus.Splash"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".invoices.ui.UpdateInvoiceActivity"
            android:theme="@style/Theme.Plutus" />
        <activity
            android:name=".transactions.ui.UpdateTransactionActivity"
            android:theme="@style/Theme.Plutus" />
        <activity
            android:name=".partners.ui.UpdatePartnerActivity"
            android:theme="@style/Theme.Plutus" />
        <activity
            android:name=".items.ui.UpdateItemActivity"
            android:theme="@style/Theme.Plutus" />
        <activity
            android:name=".app.ui.MainActivity"
            android:theme="@style/Theme.Plutus" />
        <activity android:name=".app.ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.ui.LoginActivity"
            android:theme="@style/Theme.Plutus" />
    </application>

</manifest>